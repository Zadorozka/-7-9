#include <stdio.h>

int main() {
    int n;
    printf("Введіть розмір квадратної матриці: ");
    scanf("%d", &n);

    int matrix[n][n];
    printf("Введіть елементи матриці: \n");

    // read input
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }

    int sum = 0;

    // calculate sum of elements above main diagonal
    for (int i = 0; i < n; i++) {
        for (int j = i+1; j < n; j++) {
            sum += matrix[i][j];
        }
    }

    printf("Сума елементів над головною діагоналлю: %d\n", sum);

    return 0;
}

